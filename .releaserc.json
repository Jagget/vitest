{
  "branches": ["main"],
  "repositoryUrl": "https://github.com/stenciljs/vitest",
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md"
      }
    ],
    [
      "@semantic-release/npm",
      {
        "npmPublish": false
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "cd packages/vitest-environment-stencil && npm version ${nextRelease.version} --no-git-tag-version --allow-same-version || true",
        "publishCmd": "pnpm publish --no-git-checks && cd packages/vitest-environment-stencil && pnpm publish --no-git-checks"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "package.json",
          "pnpm-lock.yaml",
          "CHANGELOG.md",
          "packages/vitest-environment-stencil/package.json"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    "@semantic-release/github"
  ]
}
